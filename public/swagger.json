        "/v1/accounts/{numero}/block": {
            "patch": {
                "tags": [
                    "Accounts"
                ],
                "summary": "Block account",
                "description": "Block an active account and calculate blocking dates",
                "operationId": "e838c8273f4dc44cf580c15880a87c0c",
                "parameters": [
                    {
                        "name": "numero",
                        "in": "path",
                        "description": "Account number",
