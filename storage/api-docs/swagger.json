{
  "openapi": "3.0.0",
  "info": {
    "title": "API de gestion des comptes bancaires",
    "description": "API pour gérer les comptes bancaires",
    "version": "1.0.0",
    "contact": {
      "name": "Faye Yatedene"
    }
  },
  "servers": [
    {
      "url": "https://ges-compte.onrender.com/api/v1",
      "description": "production"
    },
    {
      "url": "http://localhost:3000/api",
      "description": "dev"
    },
    {
      "url": "/api/v1",
      "description": "relative"
    }
  ],
  "paths": {
    "/v1/accounts": {
      "get": {
        "tags": [
          "Comptes"
        ],
        "summary": "Lister les comptes",
        "description": "Récupère la liste paginée des comptes avec filtres",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filtrer par type de compte (cheque|epargne)"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Nombre d'éléments par page"
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Numéro de page"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des comptes",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountListResponse"
                }
              }
            }
          },
          "400": {
            "description": "Paramètres invalides"
          },
          "429": {
            "description": "Trop de requêtes"
          }
        }
      },
      "post": {
        "tags": [
          "Comptes"
        ],
        "summary": "Créer un nouveau compte",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Compte créé",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountResponse"
                }
              }
            }
          },
          "400": {
            "description": "Données invalides"
          },
          "422": {
            "description": "Erreur de validation"
          }
        }
      }
    },
    "/v1/accounts/{numero}": {
      "parameters": [
        {
          "name": "numero",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "Numéro unique du compte"
        }
      ],
      "get": {
        "tags": [
          "Comptes"
        ],
        "summary": "Récupérer un compte",
        "responses": {
          "200": {
            "description": "Détails du compte",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountResponse"
                }
              }
            }
          },
          "404": {
            "description": "Compte introuvable"
          }
        }
      },
      "patch": {
        "tags": [
          "Comptes"
        ],
        "summary": "Mettre à jour un compte",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountPatchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Compte mis à jour",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountResponse"
                }
              }
            }
          },
          "400": {
            "description": "Données invalides"
          },
          "422": {
            "description": "Erreur de validation"
          }
        }
      },
      "delete": {
        "tags": [
          "Comptes"
        ],
        "summary": "Supprimer un compte",
        "description": "Supprime définitivement le compte identifié par {numero}",
        "parameters": [
          {
            "name": "numero",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Compte supprimé",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountResponse"
                }
              }
            }
          },
          "404": {
            "description": "Compte introuvable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/accounts/{numero}/bloquer": {
      "post": {
        "tags": [
          "Comptes"
        ],
        "summary": "Bloquer un compte",
        "description": "Bloque le compte (motif optionnel)",
        "parameters": [
          {
            "name": "numero",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BlockRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Compte bloqué",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountResponse"
                }
              }
            }
          },
          "404": {
            "description": "Compte introuvable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/accounts/{numero}/debloquer": {
      "post": {
        "tags": [
          "Comptes"
        ],
        "summary": "Débloquer un compte",
        "description": "Débloque le compte",
        "parameters": [
          {
            "name": "numero",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Compte débloqué",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountResponse"
                }
              }
            }
          },
          "404": {
            "description": "Compte introuvable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "uuid-1234"
          },
          "numeroCompte": {
            "type": "string",
            "example": "ACC001234567"
          },
          "titulaire": {
            "type": "string",
            "example": "John Doe"
          },
          "type": {
            "type": "string",
            "enum": [
              "cheque",
              "epargne"
            ],
            "example": "cheque"
          },
          "solde": {
            "type": "number",
            "format": "float",
            "example": 125000.5
          },
          "devise": {
            "type": "string",
            "example": "FCFA"
          },
          "dateCreation": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-15T10:00:00Z"
          },
          "statut": {
            "type": "string",
            "enum": [
              "actif",
              "bloque",
              "ferme"
            ],
            "example": "actif"
          },
          "motifBlocage": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "numeroCompte",
          "titulaire",
          "type",
          "solde"
        ]
      },
      "AccountListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "page": {
            "type": "integer"
          },
          "per_page": {
            "type": "integer"
          },
          "total": {
            "type": "integer"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Account"
            }
          }
        }
      },
      "AccountCreateRequest": {
        "type": "object",
        "required": [
          "type",
          "solde",
          "titulaire"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "cheque",
              "epargne"
            ]
          },
          "solde": {
            "type": "number",
            "minimum": 0
          },
          "devise": {
            "type": "string",
            "default": "FCFA"
          },
          "titulaire": {
            "type": "string"
          },
          "client": {
            "type": "object"
          }
        }
      },
      "AccountResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "$ref": "#/components/schemas/Account"
          }
        }
      },
      "AccountPatchRequest": {
        "type": "object",
        "properties": {
          "titulaire": {
            "type": "string"
          },
          "devise": {
            "type": "string"
          },
          "statut": {
            "type": "string",
            "enum": [
              "actif",
              "bloque",
              "ferme"
            ]
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "errors": {
            "type": "object"
          }
        }
      },
      "BlockRequest": {
        "type": "object",
        "properties": {
          "motif": {
            "type": "string",
            "example": "Activité suspecte"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Comptes",
      "description": "Endpoints de gestion des comptes bancaires"
    }
  ]
}